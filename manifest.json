{
  "name": "Herd Immunity",
  "description": "Database & Popup release",
  "version": "2.0",
  "manifest_version": 3,

  "permissions": [
    "tabs",
    "webNavigation",
    "storage"
  ],

  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_title": "Herd Immunity"
  }
}
